    <script>
        async function fetchVideoInfo() {
            const url = document.getElementById('videoLink').value;
            const loader = document.getElementById('mainLoader');
            const resultArea = document.getElementById('result-area');
            
            if(!url) return alert("Please enter a link!");

            loader.style.display = 'block';
            resultArea.style.display = 'none';

            try {
                const response = await fetch('/get-info', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({url: url})
                });
                const data = await response.json();

                loader.style.display = 'none';
                
                if(data.error) {
                    alert("Error: " + data.error);
                    return;
                }

                // ডেটা সেট করা
                document.getElementById('thumb').src = data.thumbnail;
                document.getElementById('vidTitle').innerText = data.title.substring(0, 50) + '...';
                
                const list = document.getElementById('qualityList');
                list.innerHTML = '';

                data.formats.forEach(fmt => {
                    const li = document.createElement('li');
                    li.className = 'quality-item';
                    li.innerHTML = `
                        <span>${fmt.resolution} <small style="color:#aaa">(${fmt.ext})</small></span>
                        <button class="dwn-btn-sm" onclick="startDownload('${url}', '${fmt.format_id}')">Download</button>
                    `;
                    list.appendChild(li);
                });

                resultArea.style.display = 'block';
                document.getElementById('progressArea').style.display = 'none';

            } catch (err) {
                loader.style.display = 'none';
                alert("Something went wrong!");
            }
        }

        async function startDownload(url, formatId) {
            const progressArea = document.getElementById('progressArea');
            const progressFill = document.getElementById('progressFill');
            const progressText = document.getElementById('progressText');
            const deleteNote = document.getElementById('deleteNote');

            // UI রিসেট
            progressArea.style.display = 'block';
            progressFill.style.width = '20%';
            progressText.innerText = "Server Downloading...";
            deleteNote.style.display = 'none';

            try {
                // ১. সার্ভারে ডাউনলোড রিকোয়েস্ট
                const response = await fetch('/process-download', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({url: url, format_id: formatId})
                });
                
                const data = await response.json();

                if (data.error) {
                    progressText.innerText = "Failed!";
                    progressFill.style.backgroundColor = "red";
                    return;
                }

                // ২. সার্ভারে রেডি, এবার লোকাল ডাউনলোড শুরু
                progressFill.style.width = '100%';
                progressText.innerText = "Starting Local Download...";
                deleteNote.style.display = 'block';

                // ৩. ব্রাউজারে ফাইল ডাউনলোড ট্রিগার করা
                const downloadLink = document.createElement('a');
                downloadLink.href = /download/${data.filename};
                downloadLink.download = data.filename;
                document.body.appendChild(downloadLink);
                downloadLink.click();
                document.body.removeChild(downloadLink);

            } catch (err) {
                progressText.innerText = "Network Error!";
            }
        }
    </script>
